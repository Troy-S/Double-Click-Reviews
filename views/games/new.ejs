<div class="form-container">

  <h2>Add a game</h2>

  <form action="/games" method="POST">
    <div>
      <label for="title">Title:</label>
      <input type="text" name="game[title]">
      
      <label for="platform">platform:</label>
      <input type="text" name="game[platform]">

      <label for="image">image:</label>
      <input type="text" name="game[image]">

      <label for="release_date">release_date:</label>
      <input type="text" name="game[release_date]">

      <label for="description">description:</label>
      <input type="text" name="game[description]">

      <label for="price">price:</label>
      <input type="number" name="game[price]">

      <input type="submit">
    </div>
  </form>
</div>